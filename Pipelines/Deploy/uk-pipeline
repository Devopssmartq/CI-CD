                                                sh 'rm -rf ./{*,.*}'
                                                sh "tar -xzvf ${APP_SERVICE_APP_ENGINE_VERSION}.tar.gz" 
                                                sh "cp -r build/* ."
                                                sh " rm -r build"
                                                sh "ls"                              
