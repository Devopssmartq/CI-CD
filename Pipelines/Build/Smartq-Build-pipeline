def buildcontroldeskflutter() {
    container('flutter') {
        sh 'echo ${WORKSPACE}'
        sh 'echo $BUILD_NUMBER'
            dir('controldeskflutter') {
                sh 'flutter clean'
                sh 'flutter pub get'
                sh 'flutter build web --web-renderer canvaskit'
                sh 'ls'
                dir ('${WORKSPACE}/build/web') {
                    sh 'ls'
                    sh 'pwd'
                    //sh 'echo changing to directory'
                }
            }
    }
}
