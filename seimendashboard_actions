name: Build and Deploy SiemensDashboard

on:
  workflow_dispatch:
    inputs:
      branch:
        description: 'Branch to deploy'
        required: true
        default: 'main'
        type: choice
        options: 
          - master
          - auto-sprint
          - auto-release
      region:
        description: 'Deployment region'
        required: true
        default: 'us'
        type: choice
        options:
          - japan
          - us
          - uk
      services:
        description: 'Services to deploy'
        required: true
        default: 'app'
        type: choice
        options:
          - app
          - dashboard

jobs:
  build-and-deploy: 
    runs-on: ubuntu-latest

    env: 
      NODE_OPTIONS: '--max-old-space-size=4096'

    steps:  
      - name: Checkout repository
        uses: actions/checkout@v2
        with: 
          ref: ${{ github.event.inputs.branch }}

      - name: List files after checkout
        run: ls -la
          
      - name: Print Commit ID
        run: |
          echo "Short Commit ID: ${GITHUB_SHA::8}"
        
      - name: Set up Node.js
        uses: actions/setup-node@v3
        with:
          node-version: '14.19.0'

      - name: Install dependencies and build
        run: |
          echo "Running first command"
          npm install
          echo "Running second command"
          CI=false npm run build
          echo "Running third command"
          ls
          cd build 
          ls
          cd ..
          ls
          
      - name: Tar and zip build folder
        run: |
          tar -czf ${GITHUB_SHA::8}.tar.gz build/*
          ls

      # - name: Deploy to ${{ github.event.inputs.region }}
      #   run: |
      #     if [ "${{ github.event.inputs.services }}" == "app" ]; then
      #       echo "Deploying app to ${{ github.event.inputs.region }}"
      #       # Add deployment commands for app here
      #     elif [ "${{ github.event.inputs.services }}" == "dashboard" ]; then
      #       echo "Deploying dashboard to ${{ github.event.inputs.region }}"
      #       # Add deployment commands for dashboard here
      #     fi
