pipeline {
    agent {
    kubernetes {
      yaml '''
        apiVersion: v1
        kind: Pod
        metadata:
          labels:
            some-label: some-exp
        spec:
          containers:
          - name: katalonstudio
            image: katalonstudio/katalon
            command:
            - sleep
            args:
            - 99d
            tty: true
        '''
      retries 2
    }
  }

    stages {
        stage('pull') { 
            steps { 
                git branch: 'master',
                credentialsId: 'abhigit',
                url: 'https://github.com/Bottle-Lab-Technologies-PVT-LTD/Automation-iOS.git'
                sh 'ls -lrt'
                dir ('Test Suites'){
                    sh 'ls'
                }
            }                       
        }
        stage('Run katalon') {
            steps {
                container('katalonstudio') {
                    
                    sh 'pwd'
                    sh 'cd /home/jenkins/agent/workspace/'
                    sh 'ls'
                    sh 'katalonc -noSplash -runMode=console -projectPath="/home/jenkins/agent/workspace/katalon-ios/iOS Mobile Tests.prj" -retry=0 -testSuitePath="Test Suites/iOS Login/iOS Test Suite" -browserType="Remote" -executionProfile="default" -apiKey="e280c006-4270-4d00-a6e8-1abbf2f43749" -orgID=41312 --config -proxy.auth.option=NO_PROXY -proxy.system.option=NO_PROXY -proxy.system.applyToDesiredCapabilities=true'
                }
            }
        }
    }
    post{
	    always{
		    script{
			    mail bcc: '', body: "Testcases is working\nBuild Status: ${currentBuild.currentResult}.\nJenkins Build Number: ${Build_Number}.\nJenkins Build URL: ${BUILD_URL}.\nJob Name: ${Job_Name}", 
                cc: 'chiranjeevi.rb@thesmartq.com, srimathi.rb@thesmartq.com', 
                from: 'pipeline-pantry@thesmartq.com', 
                replyTo: '', 
                subject: "Build Status# ${currentBuild.currentResult}", 
                to: 'yashwanth.kp@thesmartq.com'
		    }
	    }
    }
}
